#!/bin/bash

# Name for your wallpaper image
img="wallpaper.jpg"

# Image folder location
img_folder="$HOME/Pictures"

# Set the resolution
# All: Do not include for all
# standard:
#	800x600 1024x768 1280x960 1280x1024 1400x1050 1600x1200 2560x2048
# widescreen:
#	1024x600 1280x800 1366x768 1440x900 1600x900 1680x1050 1920x1080
#	1920x1200 2560x1440 2560x1600
# atleast=1920x1080

# Set the purity filter setting
# SFW			    = 100
# Sketchy			= 010
# Both				= 110
purity=100

# Set the category
# General		        = 100
# Anime                 = 010
# People            	= 001
# NOTE: Can combine them
categories=111

# Set the aspect ratio of the image
# All				= Do not include for all
# 4:3				= 4x3
# 5:4				= 5x4
# 16.9				= 16x9
# 16:10				= 16x10
# 32:9  			= 32x9
# 48:9				= 48x9
# NOTE: Can combine them by seperating with ,
ratios=16x9

# Set the color of the image
# All               = Do not include for all
#
# #660000 #990000 #cc0000 #cc3333 #ea4c88 #993399
# #663399 #333399 #0066cc #0099cc #66cccc #77cc33
# #669900 #336600 #666600 #999900 #cccc33 #cccc33
# #cccc33 #ff9900 #ff6600 #cc6633 #996633 #663300
# #000000 #999999 #cccccc #ffffff #424153

#colors=cccc33

# Set the site address
site="wallhaven.cc"

# Combine the two above
wallpaper="$img_folder/$img"

# Address for the wallpaper website along with all of the selected options
wallpaper_url="https://$site/search?categories=$categories&purity=$purity&sorting=random&order=desc"

if [ -n "$colors" ]; then
    wallpaper_url+="&colors=$colors"
fi

if [ -n "$ratios" ]; then
    wallpaper_url+="&ratios=$ratios"
fi

if [ -n "$atleast" ]; then
    wallpaper_url+="&atleast=$atleast"
fi

# Randomly selected image
rand_pic_url=$(curl -s "$wallpaper_url" | grep -oP '<a class="preview" href="https://'$site'/w/(.*)"' | head -1 | cut -d "\"" -f 4)

# Parse out the image url
rand_pic=$(curl -s $rand_pic_url | grep -oP 'src="https://w.'$site'/full/(.*)' | cut -d "\"" -f 2)

# Download it
curl -s $rand_pic -o $wallpaper

#!/bin/bash

wid=$1
class=$2
instance=$3
consequences=$4

# notify-send "wid: $wid"
# notify-send "class: $class"
# notify-send "instance: $instance"
# notify-send "consequences: $consequences"

case "$class" in
firefox)
    if [ "$instance" = "Toolkit" ]; then
        echo "state=floating sticky=on"
    fi
    ;;
TelegramDesktop)
    echo "desktop=8"
    ;;
discord)
    echo "desktop=5"
    ;;
gnome-calculator)
    echo "state=floating"
    ;;
mpv)
    echo "state=floating"
    ;;
Matplotlib)
    echo "state=floating"
    ;;
xpad)
    echo "state=floating"
    ;;
Zathura)
    echo "state=tiled"
    ;;
XTerm)
    xkb-switch -s us
    ;;
Alacritty)
    xkb-switch -s us
    ;;
flameshot)
    echo "state=floating"
    ;;
Steam)
    echo "desktop=10"
    ;;
esac


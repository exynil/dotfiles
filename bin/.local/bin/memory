#!/usr/bin/env bash

success=false

while [ "$success" = false ]; do
    mem_free=$(cat '/proc/meminfo' | grep 'MemFree' | awk '{print $2}')

    if [ "$mem_free" -le 200000 ]; then
        send_message -m "Памяти пизда! $mem_free"
        success=true
    else
        sleep 10
        echo "Пока что всё ок!"
    fi
done

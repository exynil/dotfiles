#!/bin/bash

# Что делает этот скрипт:
# - Настраивает расположение мониторов в зависимости от hostname

hostname=$(uname -n)

if [ "$hostname" = "arch-rrg" ]; then
    hdmi="HDMI-0"
    dp="DP-4"
    xrandr --output "$hdmi" --pos 1920x0 --rotate right \
    --output "$dp" --mode 1920x1080 --pos 0x420
fi

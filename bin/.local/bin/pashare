#!/bin/bash

source="alsa_output.pci-0000_01_00.1.hdmi-stereo.monitor"

case "$1" in
  start)
    $0 stop 
    pactl load-module module-simple-protocol-tcp rate=48000 format=s16le channels=2 source=$source record=true port=5000
    ;;
  stop)
    pactl unload-module "$(pactl list | grep tcp -B1 | grep M | sed 's/[^0-9]//g')"
    ;;
  *)
    echo "Usage: $0 start|stop" >&2
    ;;
esac